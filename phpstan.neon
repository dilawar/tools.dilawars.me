includes:
    - ./vendor/phpstan/phpstan/conf/bleedingEdge.neon
    - ./phpstan-baseline.neon
parameters:
  level: 6
  ignoreErrors:
    - '#^Variable \$routes might not be defined\.$#'
    - '#^Variable \$this might not be defined\.$#'
  paths:
    - app
    - tests
  scanDirectories:
    - ./vendor/codeigniter4/
    - ./vendor/codeigniter/
