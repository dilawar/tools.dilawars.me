includes:
    - ./vendor/phpstan/phpstan/conf/bleedingEdge.neon
    - ./phpstan-baseline.neon
parameters:
    level: 8
    ignoreErrors:
        - '#Variable \$this might not be defined.#'
        - '#Variable \$routes might not be defined.#'
        - '#Constant ENVIRONMENT not found.#'
        - '#Access to protected property chillerlan.*?#'
    paths:
        - app
        - tests
    excludePaths:
        - ./app/Views/errors/*
        - ./app/Views/Shield/*
    scanDirectories:
        - ./vendor/codeigniter4/
        - ./vendor/codeigniter/
